# LemonAI Environment Variables

# Database
STORAGE_PATH=data/database.sqlite

# Runtime Configuration
RUNTIME_TYPE=docker
WORKSPACE_DIR=workspace

# OpenAI Configuration (Optional - for browser automation)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_API_URL=https://api.openai.com/v1

# Proxy Configuration (Optional)
DISABLE_PROXY=true
PROXY_PROTOCOL=http
PROXY_PORT=7890
PROXY_CONNECT_TIMEOUT=500

# Application Ports
PORT=3000
VITE_PORT=5005
VITE_SERVICE_URL=http://127.0.0.1:3000

# Docker Configuration (if using Docker runtime)
DOCKER_HOST_ADDR=
ACTUAL_HOST_WORKSPACE_PATH=

# Other API Keys (as needed)
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=
YOUTUBE_API_KEY=
TAVILY_API_KEY=
GEMINI_API_KEY=
